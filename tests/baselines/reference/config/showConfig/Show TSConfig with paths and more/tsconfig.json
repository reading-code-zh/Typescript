{
    "compilerOptions": {
        "allowJs": true,
        "outDir": "./lib",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2017",
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "@root/*": [
                "./*"
            ],
            "@configs/*": [
                "src/configs/*"
            ],
            "@common/*": [
                "src/common/*"
            ],
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./lib"
    ]
}
